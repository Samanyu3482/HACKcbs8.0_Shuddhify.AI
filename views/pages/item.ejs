<% layout('layouts/boilerplate') %>

<section class="hero-section">
  <div id="particles-js"></div>

  <div class="container hero-content-wrapper">
    <a href="/items" class="back-link d-inline-flex align-items-center gap-2 mb-4">
      <span>←</span> Back to Items
    </a>

    <div class="row align-items-center">
      <div class="col-auto">
        <div class="milk-image">
          <img src="<%= item.image_url %>" alt="<%= item.name %>" class="img-fluid">
        </div>
      </div>
      <div class="col">
        <h2 class="display-2 fw-bold mb-3"><%= item.name %></h2>
        <span class="badge bg-white text-dark px-3 py-2"><%= item.category %></span>
      </div>
    </div>

    <p class="description mt-4"><%= item.description %></p>
  </div>
</section>

<!-- Main Content -->
<div class="container my-5">
    <!-- Tests Section -->
    <div class="row mb-4">
        <!-- Home-Based Tests -->
        <% if (item.home_remedies && item.home_remedies.size > 0) { %>
        <div class="col-md-6 mb-4">
            <div class="card test-card">
                <div class="card-body">
                    <h3 class="section-title mb-4">
                        <span class="icon-check me-2">✓</span>
                        Home-Based Tests
                    </h3>
                    <div class="d-grid gap-3">
                        <% let homeIndex = 0; %>
                        <% for (let [testName, testDesc] of item.home_remedies) { %>
                        <div class="test-item home-test" onclick="openModal('homeTest<%= homeIndex %>')">
                            <span class="icon-check me-2">✓</span>
                            <span><%= testName %></span>
                        </div>
                        <% homeIndex++; %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Lab-Based Tests -->
        <% if (item.lab_tests && item.lab_tests.size > 0) { %>
        <div class="col-md-6 mb-4">
            <div class="card test-card">
                <div class="card-body">
                    <h3 class="section-title mb-4">
                        <span class="icon-info me-2">ⓘ</span>
                        Lab-Based Tests
                    </h3>
                    <div class="d-grid gap-3">
                        <% let labIndex = 0; %>
                        <% for (let [testName, testDesc] of item.lab_tests) { %>
                        <div class="test-item lab-test" onclick="openModal('labTest<%= labIndex %>')">
                            <span class="icon-info me-2">ⓘ</span>
                            <span><%= testName %></span>
                        </div>
                        <% labIndex++; %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Health Issues -->
    <% if (item.health_issues && item.health_issues.length > 0) { %>
    <div class="card section-card mb-4">
        <div class="card-body">
            <h3 class="section-title mb-4">
                <span class="icon-warning me-2">⚠</span>
                Health Issues Caused by Adulteration
            </h3>
            <div class="row g-3">
                <% item.health_issues.forEach(issue => { %>
                <div class="col-md-6">
                    <div class="health-item">
                        <span class="icon-warning me-2">⚠</span>
                        <span><%= issue %></span>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Tutorial Videos -->
    <% if (item.youtube_links && item.youtube_links.length > 0) { %>
    <div class="card section-card mb-4">
        <div class="card-body">
            <h3 class="section-title mb-4">
                <span class="icon-play me-2">▶</span>
                Tutorial Videos
            </h3>
            <div class="row g-3">
                <% item.youtube_links.forEach((link, index) => { %>
                <div class="col-md-6">
                    <div class="video-item" onclick="openModal('videoModal<%= index %>')">
                        <span class="icon-play me-2">▶</span>
                        <span>Tutorial Video <%= index + 1 %></span>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <% } %>

   

    <!-- Signs of Adulteration -->
    <% if (item.adulteration_types && item.adulteration_types.length > 0) { %>
    <div class="card section-card mb-4">
        <div class="card-body">
            <h3 class="section-title mb-4">
                <span class="icon-alert me-2">⚠</span>
                Signs of Adulteration
            </h3>
            <div class="row g-3">
                <% item.adulteration_types.forEach(sign => { %>
                <div class="col-md-6">
                    <div class="signs-item">
                        <span class="icon-alert me-2">⚠</span>
                        <span><%= sign %></span>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Prevention Tips -->
    <% if (item.prevention_tips) { %>
    <div class="card prevention-card mb-4">
        <div class="card-body">
            <h3 class="mb-4">Prevention Tips</h3>
            <div class="d-grid gap-3">
                <% 
                const tips = item.prevention_tips.split('\n').filter(tip => tip.trim());
                tips.forEach((tip, index) => { 
                %>
                <div class="prevention-item">
                    <div class="number-badge"><%= index + 1 %></div>
                    <span><%= tip.trim() %></span>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Report Section -->
    <div class="card report-card text-center">
        <div class="card-body p-5">
            <h3 class="mb-3">Found Adulterated <%= item.name %>?</h3>
            <p class="text-muted mb-4">Report it to FSSAI to protect your community</p>
            <button class="btn btn-success btn-lg px-5">Report Now</button>
        </div>
    </div>
</div>

<!-- Modals for Home Tests -->
<% if (item.home_remedies && item.home_remedies.size > 0) { %>
    <% let homeIndex = 0; %>
    <% for (let [testName, testDesc] of item.home_remedies) { %>
    <div class="modal fade" id="homeTest<%= homeIndex %>" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title"><%= testName %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p><%= testDesc %></p>
                </div>
            </div>
        </div>
    </div>
    <% homeIndex++; %>
    <% } %>
<% } %>

<!-- Modals for Lab Tests -->
<% if (item.lab_tests && item.lab_tests.size > 0) { %>
    <% let labIndex = 0; %>
    <% for (let [testName, testDesc] of item.lab_tests) { %>
    <div class="modal fade" id="labTest<%= labIndex %>" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title"><%= testName %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p><%= testDesc %></p>
                    <button class="btn btn-success w-100 mt-3">Book Now</button>
                </div>
            </div>
        </div>
    </div>
    <% labIndex++; %>
    <% } %>
<% } %>

<!-- Modals for YouTube Videos -->
<% if (item.youtube_links && item.youtube_links.length > 0) { %>
    <% item.youtube_links.forEach((link, index) => { %>
    <div class="modal fade" id="videoModal<%= index %>" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Tutorial Video <%= index + 1 %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="ratio ratio-16x9">
                        <iframe src="<%= link %>" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
<% } %>

<!-- Modals for YouTube Shorts -->
<% if (item.youtube_shorts_links && item.youtube_shorts_links.length > 0) { %>
    <% item.youtube_shorts_links.forEach((link, index) => { %>
    <div class="modal fade" id="shortsModal<%= index %>" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Quick Test <%= index + 1 %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="ratio ratio-9x16 shorts-container">
                        <iframe src="<%= link %>" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
<% } %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom JS -->
<script src="/js/script.js"></script>